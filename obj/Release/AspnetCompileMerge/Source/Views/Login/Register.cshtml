
@{
  ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
      body {
          font-family: Arial, Helvetica, sans-serif;
          font-family: Arial, Helvetica, sans-serif;
          background-image: url("../../Images/background.jpg");
          width: 100%;
          height: 100%;
          background-size: contain;
          margin: 0px;
          padding: 0px;
      }

    * {
      box-sizing: border-box;
    }

    /* Add padding to containers */
   

    /* Full-width input fields */
      input[type=text], input[type=password], input[type=email], input[type=number] {
          width: 100%;
          padding: 15px;
          margin: 5px 0 22px 0;
          display: inline-block;
          border: none;
          background: #f1f1f1;
      }

          input[type=text]:focus, input[type=password]:focus, input[type=email]:focus, input[type=number]:focus {
              background-color: #ddd;
              outline: none;
          }

    /* Overwrite default styles of hr */
    hr {
      border: 1px solid #f1f1f1;
      margin-bottom: 25px;
    }

    /* Set a style for the submit button */
    .registerbtn {
      background-color: #04AA6D;
      color: white;
      padding: 16px 20px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width: 100%;
      opacity: 0.9;
    }
      form {
          border-radius: 10px;
          background-color: rgba(60,60,60);
          box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
          padding: 50px;
          opacity: 0.9;
      }

      .registerbtn:hover {
        opacity: 1;
      }

    /* Add a blue text color to links */
    a {
      color: dodgerblue;
    }

    /* Set a grey background color and center the text of the "sign in" section */
    .signin {
       color:white;
      text-align: center;
    }
  </style>
</head>
<body>
    <div style="width: 100%; height: max-content; background-color: black; opacity: 0.7;border-radius:10px;">
        <h1 style="color:white;text-align:center;padding:20px;"> Library Management System </h1>
    </div>
    <div style="width: max-content; height: 75px; margin: auto; margin-top:50px; background-color: black; opacity: 0.7;border-radius:10px;">
        <h1 style="color:white;padding:10px;">Register </h1>
    </div>
    <div style="height:max-content;width:max-content;margin:auto;padding:50px;">
        <form id="loginForm" method="post">
            <div class="container">
                <div style="display:flex">
                    <div>
                        <label for="psw" style="color:white"><b>Name</b></label>
                        <input type="text" placeholder="Enter Name" name="Name" id="name" required>
                    </div>
                    <div style="margin:auto">

                        <label for="psw" style="color:white"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" id="psw" required>
                    </div>
                </div>
                <div style="display:flex">
                    <div>
                        <label for="email" style="color:white"><b>Email</b></label>
                        <input type="email" placeholder="Enter Email" name="email" id="email" required>
                    </div>
                    <div style="padding-left:40px;">
                        <label for="psw" style="color:white"><b>Mobile Number</b></label>
                        <input type="number" placeholder="Enter Mobile Number" name="MobileNumber" id="mno" required>
                    </div>
                </div>

                <button type="button" id="RegisterButton" onclick="loginUser()" class="registerbtn">Register</button>
            </div>

            <div class="container signin">
                <p>Already have an account? <a href="/Login/Index">Sign in</a>.</p>
            </div>
        </form>
    </div>
    <script>


        function loginUser() {
            var formData = $('#loginForm').serialize();
            $.ajax({
                type: 'POST',
                url: '/Login/Register', // Modify the URL if needed
                data: formData,
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        ShowMessage('Register Successfully', 'success');
                        window.location.href = '/Login/Index';
                    } else {
                        ShowMessage('Blank Fields: ' + response.blankFields.join(", "), 'error');
                    }
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                    ShowMessage(xhr.responseText, 'error');
                }
            });
        }
    </script>
</body>
</html>
